// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["metrics"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_DEV")
}

//-------------Account-------------//

enum Permission {
  PERMISSION_0000
  PERMISSION_1111
  PERMISSION_2222
}

enum Category {
  Clothes
  Electronic
  Houseware
}

model Product {
  id               String             @id
  name             String
  thumb            String
  description      String
  price            Float
  shop_id          Int
  ProductInventory ProductInventory[]
}

model ProductInventory {
  productId String   @id
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Clothes {
  id       String  @id @default(uuid())
  brand    String
  size     Int
  material String?
}

model Electronic {
  id       String  @id @default(uuid())
  brand    String
  color    String
  material String?
}

model Houseware {
  id       String  @id @default(uuid())
  brand    String
  color    String
  material String?
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  username String

  verified Boolean   @default(false)
  status   String    @default("INACTIVE")
  roles    String[]
  KeyToken KeyToken?
}

//-------------Security-------------//

model KeyToken {
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           Int      @unique
  publicKey        String?
  usedRefreshToken String[]
}

model ApiKey {
  key        String       @unique
  status     Boolean      @default(true)
  permission Permission[]
}
